{
  "linters": {
    "csharp": {
      "type": "csharp",
      "include": "(\\.cs$)",
      "exclude": "(^MogreDependencies/)",
       "discovery": {
        "([^/]+)/(.*?)\\.cs": [
          "$1/$1.csproj"
        ],
        "([^\\\\]+)\\\\(.*?)\\.cs": [
          "$1\\$1.csproj"
        ]
      },
      "binary":"cslint"
    }
  }
}
